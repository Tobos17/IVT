<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Rectangle x:Name="rect_Canvas" HorizontalAlignment="Left" Height="370" Margin="29,0,0,0" VerticalAlignment="Center" Width="304" Fill="Black"/>

        <TextBox Text="25" x:Name="txt_Red" HorizontalAlignment="Left" Margin="435,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" TextChanged="txt_ChangedRed" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" />
        <TextBox Text="80" x:Name="txt_Green" HorizontalAlignment="Left" Margin="435,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" TextChanged="txt_ChangedGreen" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" />
        <Label Content="Red" HorizontalAlignment="Left" Margin="362,87,0,0" VerticalAlignment="Top" Width="60" Background="Red"/>
        <Slider x:Name="sli_Red" HorizontalAlignment="Left" Margin="362,131,0,0" VerticalAlignment="Top" Width="231" Minimum="0" Maximum="255" ValueChanged="sli_ValueChangedRed"/>

        <TextBox Text="45" x:Name="txt_Blue" HorizontalAlignment="Left" Margin="435,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133" TextChanged="txt_ChangedBlue" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown"/>
        <Label Content="Green" HorizontalAlignment="Left" Margin="362,164,0,0" VerticalAlignment="Top" Width="60" Background="Lime"/>
        <Slider x:Name="sli_Green" HorizontalAlignment="Left" Margin="362,214,0,0" VerticalAlignment="Top" Width="231" ValueChanged="sli_ValueChangedGreen" Minimum="0" Maximum="255"/>

       
        <Label Content="Blue" HorizontalAlignment="Left" Margin="362,247,0,0" VerticalAlignment="Top" Width="60
               " Background="Blue" Foreground="White"/>
        <Slider x:Name="sli_Blue" HorizontalAlignment="Left" Margin="362,288,0,0" VerticalAlignment="Top" Width="231" ValueChanged="sli_ValueChangedBlue" Minimum="0" Maximum="255"/>
        <Label Content="RGB míchátko" HorizontalAlignment="Left" Margin="362,32,0,0" VerticalAlignment="Top" Width="194" FontSize="28"/>
        <Label x:Name="lbl_Hex" Content="Label" HorizontalAlignment="Left" Margin="421,347,0,0" VerticalAlignment="Top" Width="135" FontSize="28"/>

    </Grid>
</Window>
